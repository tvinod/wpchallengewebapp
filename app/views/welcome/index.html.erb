<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

<div id="main-container" class="container">
  <form role="form", action="/welcome", method="post" id="searchForm" name="searchForm">
    <div class="row">
      <div class='col-sm-4'>
        <div class="form-group">
          <label for="p1name">Person name</label>
          <input type="text" id="p1name" name="p1name" class="form-control" required/>
        </div>
      </div>
      <div class='col-sm-4'>
        <div class="form-group">
          <label for="p1city">City name</label>
          <input type="text" id="p1city" name="p1city" class="form-control" required/>
        </div>
      </div>
      <div class='col-sm-4'>
        <div class="form-group">
          <label for="p1statecode">State code</label>
          <input type="text" id="p1statecode" name="p1statecode" class="form-control" maxlength="2" required/>
        </div>
      </div>
    </div>

    <div class="row">
      <div class='col-sm-4'>
        <div class="form-group">
          <label for="p2name">Person name</label>
          <input type="text" id="p2name" name="p2name" class="form-control" required/>
        </div>
      </div>
      <div class='col-sm-4'>
        <div class="form-group">
          <label for="p2city">City name</label>
          <input type="text" id="p2city" name="p2city" class="form-control" required/>
        </div>
      </div>
      <div class='col-sm-4'>
        <div class="form-group">
          <label for="p2statecode">State code</label>
          <input type="text" id="p2statecode" name="p2statecode" class="form-control" maxlength="2" required/>
        </div>
      </div>
    </div>

    <input type="submit" id="search" value="Search" />
  </form>
  <% if @result %>
      <div class="card card-inverse card-primary mb-3 text-center">
        <div class="card-block">
          <h4 class="card-title">Results</h4>
          <p class="card-text"><%= simple_format(@result) %></p>
        </div>
      </div>
  <% end %>

</div>

